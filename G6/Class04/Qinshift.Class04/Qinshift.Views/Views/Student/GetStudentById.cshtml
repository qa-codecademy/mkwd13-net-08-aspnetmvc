@model StudentCourseViewModel

@{
	ViewData["Title"] = "Student Details";
}

<h2 class="text-warning">Get Student By Id</h2>

@if (Model is null)
{
	<h3 class="text-danger">No student found !</h3>
}
else
{
	<ul>
		<li><b>First Name:</b> @Model.FirstName</li>
		<li><b>Last Name:</b> @Model.LastName</li>
		<li><b>Age:</b> @Model.Age</li>
		<li><b>Adult:</b> @(Model.Age > 18 ? "Yes" : "No")</li>
		<li><b>Course Name:</b> @Model.CourseName</li>
		<li><b>Number of Classes:</b> @Model.NumberOfClasses</li>
	</ul>
}
