@model IEnumerable<Qinshift.Class04.Models.DtoModels.CoursesWithStudentsDTO>

	<h1>Index</h1>

	<table class="table" >
		<thead>
			<tr>
				<th>
					Name
				</th>
			</tr>
		</thead>

		<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>
					@item.Id
				</td>
				<td>
					@item.Name
				</td>
				<td>
					@* calling partial view in the main view *@
					@{
						Html.RenderPartial("_PartialStudentsView", item.Students);
					}
				</td>
			</tr>
		}
		</tbody>
	</table>
	
