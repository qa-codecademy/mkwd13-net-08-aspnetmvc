@model List<Student>


<h2>All students</h2>
<hr />

<div class="container">
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Date of birth</th>
                    <th>Active course</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var student in Model)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.DateOfBirth.ToShortDateString()</td>
                        <td>@student.ActiveCourse.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>